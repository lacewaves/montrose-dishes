<%= simple_form_for @dish  do |f| %>

  <%= f.input :name, label: "Dish Name" %>
  <%= f.input :cuisine, label: "Cuisine" %>
  <%= f.input :dish_type, label: "What kind of dish is it?", as: :select, collection: ["Fun","Gross"] %>
  <%= f.association :restaurant %>
  <%= f.association :ingredients, as: :check_boxes %>
  <%= f.submit "Create Dish" %>

<% end %>
