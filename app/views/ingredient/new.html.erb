<%= simple_form_for @ingredient do |f| %>

  <%= f.input :name, label: "Ingredient Name" %>
  <%= f.input :food_group, label: "Food group?", as: :select, collection: ["Dairy", "Fruit", "Vegetable", "Nuts", "Beans, Legumes", "Meat", "Shellfish", "Fish", "Confection", "Starch", "Water", "Alcohol"] %>

  <%= f.submit "Create Ingredient" %>

<% end %>
